<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FitnessTracker"
             x:Class="FitnessTracker.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#512BD4</Color>
            <Color x:Key="Secondary">#DA212F</Color>
            <Color x:Key="Tertiary">#6B7280</Color>
            <Style TargetType="Button" x:Key="PrimaryButton">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=White, Dark=Black}" />
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="FontFamily" Value="OpenSansSemibold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="CornerRadius" Value="8" />
            </Style>
            <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource PrimaryButton}">
                <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
            </Style>
            <Style TargetType="Button" x:Key="TertiaryButton" BasedOn="{StaticResource PrimaryButton}">
                <Setter Property="BackgroundColor" Value="{StaticResource Tertiary}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
